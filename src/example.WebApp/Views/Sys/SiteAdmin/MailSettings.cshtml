@model cloudscribe.Core.Web.ViewModels.SiteSettings.MailSettingsViewModel


@{

}
<div class="row">
    <div class="col-md-10 col-md-push-2">
        <h2>@ViewBag.Title</h2>
        <form method="post" class="form-horizontal" role="form" asp-antiforgery="true">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
            <input asp-for="SiteId" type="hidden" />
            <input asp-for="SiteGuid" type="hidden" />
            <div class="form-group">
                <label asp-for="DefaultEmailFromAddress" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DefaultEmailFromAddress" class="form-control" />
                    <span asp-validation-for="DefaultEmailFromAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SmtpUser" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SmtpUser" class="form-control" />
                    <span asp-validation-for="SmtpUser" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SmtpPassword" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SmtpPassword" class="form-control" />
                    <span asp-validation-for="SmtpPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SmtpServer" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SmtpServer" class="form-control" />
                    <span asp-validation-for="SmtpServer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SmtpPort" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SmtpPort" class="form-control" />
                    <span asp-validation-for="SmtpPort" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label>
                            <input asp-for="SmtpRequiresAuth" /> Requires Authentication?
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label>
                            <input asp-for="SmtpUseSsl" /> Requires SSL?
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SmtpPreferredEncoding" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SmtpPreferredEncoding" class="form-control" />
                    <span asp-validation-for="SmtpPreferredEncoding" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />

                </div>
            </div>
        </form>
    </div>
    <div class="col-md-2 col-md-pull-10">
        @await Component.InvokeAsync("Navigation", "SideNav", NamedNavigationFilters.ParentTree, "SiteAdmin")
    </div>
</div>
@section Scripts {
    <environment names="Development">
        <script src="~/lib/metisMenu/dist/metisMenu.min.js"></script>
        <script src="~/jsdev/cloudscribe-sidemenu.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/metisMenu/dist/metisMenu.min.js"></script>
        <script src="~/js/cloudscribe-sidemenu.js"></script>
    </environment>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}