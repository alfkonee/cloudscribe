@model cloudscribe.Core.Web.ViewModels.UserAdmin.UserListViewModel
@inject IViewLocalizer Localizer
@{

}

<table class="table table-striped">
    <tr>
        <th>
            <a class="btn btn-xs btn-default" asp-action="NewUser" asp-controller="UserAdmin" asp-route-siteGuid="@Model.SiteGuid">CommonResources.NewUser</a>
        </th>
        <th>
            @Localizer["Email"]

        </th>
        <th>
            CommonResources
            .LoginName
        </th>
        <th>
            CommonResources
            .DisplayName
        </th>
        <th>
            CommonResources
            .FirstName
        </th>
        <th>
            CommonResources
            .LastName
        </th>

    </tr>

    @foreach (var item in Model.UserList)
    {
        <tr>
            <td>
                <a class="btn btn-xs btn-default" asp-action="UserEdit"
                   asp-controller="UserAdmin"
                   asp-route-siteGuid="@Model.SiteGuid"
                   asp-route-userId="@item.UserId">CommonResources.Manage</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)

                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

        </tr>
    }

</table>
<div>
    <cs-pager cs-paging-info="@Model.Paging"
              asp-action="Index" asp-controller="UserAdmin"
              asp-route-siteGuid="@Model.SiteGuid"
              asp-route-query="@Model.AlphaQuery"
              asp-route-pagesize="@Model.Paging.ItemsPerPage"></cs-pager>
</div>
